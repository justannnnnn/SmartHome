<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@mipmap/backbutton" />

        <TextView
            android:id="@+id/outsideTextView"
            android:layout_width="196dp"
            android:layout_height="23dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/outside" />

        <TextView
            android:id="@+id/lightsTextView"
            android:layout_width="97dp"
            android:layout_height="21dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="14dp"
            android:background="@mipmap/lights"/>

        <Button
            android:id="@+id/porchButton"
            android:layout_width="72dp"
            android:layout_height="108dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/porchoff" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>